<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:left="1dp"
                android:top="1dp">
                <shape>
                    <solid android:color="#FF924C"/>
                    <corners android:radius="70dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item >
                <shape>
                    <!--<solid android:color="#11000000"/>-->
                    <corners android:radius="70dp"/>
                    <gradient android:angle="90" android:startColor="#11000000" android:endColor="#22000000"  />
                </shape>
            </item>
            <item android:bottom="5dp" android:right="5dp">
                <shape>
                    <!-- 设置四个角的角度 -->
                    <corners android:radius="70dp" />
                    <!--<gradient android:angle="0" android:endColor="#4DA3FF" android:startColor="#0C9BFF" />-->
                    <gradient android:angle="0" android:endColor="#FF924C" android:startColor="#FDAC57" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>