<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/forgetPassWord_belowSLay"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_del_password"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_showPassWord"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_login_close"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/forgetPassWord_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_del_password"
            android:background="@color/color_00000000"
            android:hint="请输入6位提现密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColorHint="@color/color_C5C5C5"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:textSize="@dimen/text_size_big" />

    </RelativeLayout>

    <View
        android:id="@+id/forgetPassWord_belowForL"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/forgetPassWord_belowSLay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_E1E1E1" />

    <RelativeLayout
        android:id="@+id/forgetPassWord_ConfirmPassWordLay"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/forgetPassWord_belowForL"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_del_confirmpassword"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_login_close"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/forgetPassWord_ConfirmPassWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_del_confirmpassword"
            android:background="@color/color_00000000"
            android:hint="请再次输入6位提现"
            android:textColorHint="@color/color_C5C5C5"
            android:textCursorDrawable="@drawable/edittext_cursor_color"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textSize="@dimen/text_size_big" />

    </RelativeLayout>

    <View
        android:id="@+id/forgetPassWord_belowSL"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/forgetPassWord_ConfirmPassWordLay"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_E1E1E1" />

    <TextView
        android:id="@+id/forgetPassWord_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_disable"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big_xx"/>

</LinearLayout>
