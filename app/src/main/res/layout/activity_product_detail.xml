<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/color_3F3F3F"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/price_bill_detail_status"
            android:textStyle="bold"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/uncompleted_text_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_bill_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_3889FF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_price_bill_detail_statustime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_999999"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:layout_marginRight="22dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price_bill_detail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_3F3F3F"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingRight="19dp"
            android:paddingBottom="5dp"
            android:lineSpacingExtra="5dp"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/ll_price_bill_detail_product"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_prefer_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_price_bill_text"
                android:text="查看优选产品"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/color_3F3F3F"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:layout_marginTop="6dp"
            android:text="@string/price_bill_detail_bill_info"
            android:textStyle="bold"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/uncompleted_text_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_8A97B0"
                    android:text="小区:"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_price_bill_detail_estatename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_3F3F3F"
                    android:singleLine="true"
                    android:maxLength="14"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_8A97B0"
                    android:text="时间: "
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_price_bill_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_3F3F3F"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price_bill_detail_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_8A97B0"
                    android:text="城市:"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_price_bill_detail_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_3F3F3F"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_8A97B0"
                    android:text="性质: "
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_price_bill_detail_house_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:singleLine="true"
                    android:textColor="@color/color_3F3F3F"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_price_bill_detail_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_8A97B0"
                android:text="地址:"/>

            <TextView
                android:id="@+id/tv_price_bill_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_3F3F3F"
                android:maxLines="2"
                android:layout_marginRight="3dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_8A97B0"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="房本照片"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_house_pic1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:orientation="horizontal"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_house_pic2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:orientation="horizontal"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_house_pic3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:orientation="horizontal"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>