<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/resetPassWord_belowFContainerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/resetPassWord_belowFLay"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp">


            <ImageView
                android:id="@+id/iv_del_oldpassword"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/resetPassWord_oldPassword_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@color/color_00000000"
                android:layout_toLeftOf="@id/iv_del_oldpassword"
                android:hint="请输入原密码"
                android:textColorHint="@color/color_C5C5C5"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="@dimen/sp_18" />


        </RelativeLayout>

        <View
            android:id="@+id/resetPassWord_belowFL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/resetPassWord_belowFLay"
            android:background="@color/color_E1E1E1" />

        <RelativeLayout
            android:id="@+id/resetPassWord_belowSLay"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/resetPassWord_belowFL"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp">


            <CheckBox
                android:id="@+id/resetPassWord_showPassWord"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selecter_password"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_del_password"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/resetPassWord_password_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_del_password"
                android:background="@color/color_00000000"
                android:textColorHint="@color/color_C5C5C5"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:hint="请输入新密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="@dimen/sp_18" />


        </RelativeLayout>

        <View
            android:id="@+id/resetPassWord_belowForL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/resetPassWord_belowSLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_E1E1E1" />

        <RelativeLayout
            android:id="@+id/resetPassWord_ConfirmPassWordLay"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/resetPassWord_belowForL"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp">

            <CheckBox
                android:id="@+id/resetPassWord_ConfirmPassWordCB"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selecter_password"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_del_confirmpassword"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/resetPassWord_ConfirmPassWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_del_confirmpassword"
                android:background="@color/color_00000000"
                android:textColorHint="@color/color_C5C5C5"
                android:hint="请再次输入新密码"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="@dimen/sp_18"/>

        </RelativeLayout>

        <View
            android:id="@+id/resetPassWord_belowSL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/resetPassWord_ConfirmPassWordLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_E1E1E1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/resetPassWord_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_disable"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>
