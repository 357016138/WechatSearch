<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableAutoLoadmore="true"
    app:srlEnableOverScrollBounce="false">
    <!-- android:background="@color/color_4F83FE"-->

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!--  android:background="@color/color_FAFAFA"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_mine_top">

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="31dp"
                    android:adjustViewBounds="true"
                    android:scaleType="matrix"
                    android:src="@drawable/icon_mine_3" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="-102dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="284dp">

                    <LinearLayout
                        android:id="@+id/ll_mine_logined"
                        android:layout_width="match_parent"
                        android:layout_height="267dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_loading_dialog"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_mine_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="33dp"
                            android:text="153****6473"
                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:paddingRight="17dp">

                            <ImageView
                                android:id="@+id/mine_iv_show"
                                android:layout_width="24dp"
                                android:layout_height="21dp"
                                android:src="@drawable/icon_mine_2_2" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/mine_tv_capital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/color_3F3F3F"
                            android:textSize="@dimen/sp_36" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账户余额(元)"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/mine_tv_earned"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/color_3F3F3F"
                                    android:textSize="@dimen/sp_20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已赚收益(元)"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/mine_tv_duein"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/color_3F3F3F"
                                    android:textSize="@dimen/sp_20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待收收益(元)"
                                    android:textColor="@color/color_999999"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/bt_mine_withdraw_deposit"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_button_disable"
                            android:gravity="center"
                            android:text="提现"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_big_xx" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_mine_header"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icon_mine_1" />


                    <LinearLayout
                        android:id="@+id/ll_mine_login"
                        android:layout_width="match_parent"
                        android:layout_height="267dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_loading_dialog"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="52dp"
                            android:src="@drawable/icon_mine_1" />

                        <Button
                            android:id="@+id/btn_sign_out"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="70dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/bg_login_in"
                            android:text="登录/注册"
                            android:textColor="@color/color_FF934C"
                            android:textSize="@dimen/text_size_big" />

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mine_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_4"
                            android:text="@string/mine_4" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_5"
                            android:text="@string/mine_5" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_6"
                            android:gravity="center_horizontal"
                            android:text="@string/mine_6" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_7"
                            android:text="@string/mine_7" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mine_8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_8"
                            android:text="@string/mine_8" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_9"
                            android:text="@string/mine_9" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_10"
                            android:text="@string/mine_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mine_11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_11"
                            android:text="@string/mine_11" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_12"
                            android:text="@string/mine_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_13"
                            android:text="@string/mine_13" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/icon_mine_14"
                            android:text="@string/mine_14" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>


