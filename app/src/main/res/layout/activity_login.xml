<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="欢迎登录"
            android:textColor="#FF3F3F3F"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="28sp"/>

     <!--   <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/login_belowFLay"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/login_uerName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_00000000"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="13"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_del_username"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:id="@+id/login_belowFL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/login_belowFLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_E1E1E1" />

        <RelativeLayout
            android:id="@+id/login_belowSLay"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/login_belowFL"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

         <!--   <ImageView
                android:id="@+id/login_password_iv"
                android:layout_width="17.3dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_password" />-->
<!--
            <TextView
                android:id="@+id/login_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.7dp"
                android:layout_toRightOf="@id/login_password_iv"
                android:text="密码"
                android:textColor="@color/color_4A4A4A"
                android:textSize="16sp" />-->

            <CheckBox
                android:id="@+id/login_showPassWord"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selecter_password" />

            <ImageView
                android:id="@+id/iv_del_password"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:padding="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/login_showPassWord"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/login_password_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_del_password"
                android:background="@color/color_00000000"
                android:hint="请输入密码"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="18sp" />


        </RelativeLayout>

        <View
            android:id="@+id/login_belowSL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/login_belowSLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_E1E1E1" />


        <!--<RelativeLayout-->
            <!--android:id="@+id/login_loginButtonLay"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/login_belowSL"-->
            <!--android:layout_marginTop="40dp">-->

            <!--<TextView-->
                <!--android:id="@+id/login_loginButton"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="48dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:background="@drawable/bg_login_button"-->
                <!--android:gravity="center"-->
                <!--android:text="登录"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/text_size_big_xx" />-->
        <!--</RelativeLayout>-->

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_loan_pic_shadow"
            android:layout_below="@id/login_belowSL"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/login_loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_loan"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_belowTLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_btn">

            <View
                android:id="@+id/login_signVL"
                android:layout_width="1dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:background="@color/color_E1E1E1" />

            <TextView
                android:id="@+id/login_sign"
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:layout_marginRight="28dp"
                android:layout_toLeftOf="@id/login_signVL"
                android:gravity="right|center_vertical"
                android:text="注册"
                android:textColor="@color/color_FF3889FF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/login_forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/login_signVL"
                android:gravity="left|center_vertical"
                android:text="忘记密码"
                android:textSize="14sp" />

        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>
