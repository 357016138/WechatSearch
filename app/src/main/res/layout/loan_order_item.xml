<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_product_name"
        android:text="优越贷B"
        android:textColor="@color/color_3F3F3F"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_order_state"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tv_product_name"
        android:layout_marginEnd="20dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_FF924C"
        />

    <TextView
        android:id="@+id/tv_loan_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_name"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@id/tv_product_name"
        android:text="借款金额"
        android:textColor="@color/color_8A97B0"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_amount"
        android:layout_alignParentEnd="true"
        android:text="200.00万元"
        android:textColor="@color/color_FF924C"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/tv_loan_amount_label"
        android:layout_alignBaseline="@id/tv_loan_amount_label"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="@dimen/dp_20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_interest_rate_label"
        android:text="综合利率"
        android:textSize="16sp"
        android:textColor="@color/color_8A97B0"
        android:layout_below="@id/tv_loan_amount_label"
        android:layout_alignStart="@id/tv_product_name"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_interest_rate"
        android:layout_alignParentEnd="true"
        android:text="12%"
        android:textColor="@color/color_FF3F3F3F"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/tv_loan_amount_label"
        android:layout_alignBaseline="@id/tv_interest_rate_label"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="@dimen/dp_20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_period_label"
        android:text="借款周期"
        android:textSize="16sp"
        android:textColor="@color/color_8A97B0"
        android:layout_below="@id/tv_interest_rate_label"
        android:layout_alignStart="@id/tv_product_name"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_period"
        android:layout_alignParentEnd="true"
        android:text="24月"
        android:textSize="16sp"
        android:textColor="@color/color_FF3F3F3F"
        android:layout_toEndOf="@+id/tv_loan_period_label"
        android:layout_alignBaseline="@id/tv_loan_period_label"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="@dimen/dp_20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_user_label"
        android:textSize="16sp"
        android:textColor="@color/color_8A97B0"
        android:layout_below="@id/tv_loan_period_label"
        android:layout_alignStart="@id/tv_product_name"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loan_user"
        android:layout_alignParentEnd="true"
        android:text="东方不败"
        android:textSize="16sp"
        android:textColor="@color/color_FF3F3F3F"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/tv_loan_user_label"
        android:layout_alignBaseline="@id/tv_loan_user_label"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="@dimen/dp_20"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:layout_below="@id/tv_loan_user_label"
        android:layout_marginTop="16dp"
        android:background="@color/uncompleted_text_color"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_order_date"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:text="2018-02-26"
        android:drawableStart="@drawable/icon_xunjiadingdan_shijian"
        android:drawablePadding="@dimen/dp_3"
        android:textColor="@color/color_999999"
        android:textSize="14sp" />
</RelativeLayout>