<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <CheckBox
            android:id="@+id/cb_use_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="10"
            android:checked="true"
            android:gravity="center">


        </CheckBox>

        <CheckBox
            android:id="@+id/cb_use_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="30"
            android:gravity="center">

        </CheckBox>

        <CheckBox
            android:id="@+id/cb_use_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="50"
            android:gravity="center">


        </CheckBox>

        <CheckBox
            android:id="@+id/cb_use_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="100"
            android:gravity="center">

        </CheckBox>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/uncompleted_text_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <CheckBox
            android:id="@+id/cb_use_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="200"
            android:gravity="center">

        </CheckBox>

        <CheckBox
            android:id="@+id/cb_use_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="300"
            android:gravity="center">

        </CheckBox>

        <CheckBox
            android:id="@+id/cb_use_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="500"
            android:gravity="center">

        </CheckBox>

        <CheckBox
            android:id="@+id/cb_use_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/slider_tab_bgcolor"
            android:textColor="@drawable/slider_tab_tvcolor"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:layout_margin="5dp"
            android:text="1000"
            android:gravity="center">
        </CheckBox>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_loan_pic_shadow"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_loan"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>



</LinearLayout>