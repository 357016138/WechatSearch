<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/forgetPassWord_belowFContainerLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/forgetPassWord_belowFLay"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/forgetPassWord_uerName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_00000000"
                android:hint="请输入手机号码"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:inputType="number"
                android:maxLength="13"
                android:singleLine="true"
                android:textColorHint="@color/color_C5C5C5"
                android:textSize="@dimen/text_size_big" />

            <ImageView
                android:id="@+id/iv_del_username"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>


        </RelativeLayout>

        <View
            android:id="@+id/forgetPassWord_belowFL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/forgetPassWord_belowFLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_E1E1E1" />


        <RelativeLayout
            android:id="@+id/forgetPassWord_belowForLay"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@id/forgetPassWord_belowFL"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <TextView
                android:id="@+id/forgetPassWord_obtainCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/color_A2A2A2" />

            <ImageView
                android:id="@+id/iv_del_obtainCode"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/forgetPassWord_obtainCode"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_login_close"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/forgetPassWord_code_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_del_obtainCode"
                android:background="@color/color_00000000"
                android:textColorHint="@color/color_C5C5C5"
                android:textCursorDrawable="@drawable/edittext_cursor_color"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="@dimen/text_size_big"/>

        </RelativeLayout>

        <View
            android:id="@+id/forgetPassWord_belowTL"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/forgetPassWord_belowForLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_E1E1E1" />

    </RelativeLayout>

    <!--<TextView-->
        <!--android:id="@+id/forgetPassWord_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:background="@drawable/bg_button_disable"-->
        <!--android:gravity="center"-->
        <!--android:text="下一步"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="@dimen/sp_20"/>-->

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/forgetPassWord_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_disable"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"/>

    </LinearLayout>

</LinearLayout>
